.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  flex: 1;
}

.section {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}

.label {
  font-weight: bold;
}

.number {
  flex: 1;
  min-width: 10px;
}

.button {
  flex: 1;
}

.size {
  font-style: italic;
  font-size: 90%;
  color: red;
}

.hidden {
  display: none;
}
